<?xml version='1.0' encoding='utf-8'?>
<widget id="vn.app.test" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon background="res/android/mdpi_background.png" density="mdpi" foreground="res/android/mdpi_foreground.png" />
        <icon background="res/android/hdpi_background.png" density="hdpi" foreground="res/android/hdpi_foreground.png" />
        <icon background="res/android/xhdpi_background.png" density="xhdpi" foreground="res/android/xhdpi_foreground.png" />
        <icon background="res/android/xxhdpi_background.png" density="xxhdpi" foreground="res/android/xxhdpi_foreground.png" />
        <icon background="res/android/xxxhdpi_background.png" density="xxxhdpi" foreground="res/android/xxxhdpi_foreground.png" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <!-- <feature name="CDVWKWebViewEngine">
    <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature> -->
     <preference name="StatusBarOverlaysWebView" value="true" />
    <!-- <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" /> -->
    <preference name="WKWebViewOnly" value="false" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false"/>
    <preference name="ScrollEnabled" value="true" />
    <preference name="Hostname" value="app" />
    <preference name="WKSuspendInBackground" value="false" />
    <preference name="iosScheme" value="file" />
</widget>
