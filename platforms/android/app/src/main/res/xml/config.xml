<?xml version='1.0' encoding='utf-8'?>
<widget id="vn.app.test" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <feature name="Device">
        <param name="android-package" value="org.apache.cordova.device.Device" />
    </feature>
    <feature name="BackgroundMode">
        <param name="android-package" value="de.appplant.cordova.plugin.background.BackgroundMode" />
    </feature>
    <feature name="BackgroundModeExt">
        <param name="android-package" value="de.appplant.cordova.plugin.background.BackgroundModeExt" />
    </feature>
    <feature name="HeaderColor">
        <param name="android-package" value="tomloprod.HeaderColor" />
        <param name="onload" value="true" />
    </feature>
    <feature name="NetworkStatus">
        <param name="android-package" value="org.apache.cordova.networkinformation.NetworkManager" />
    </feature>
    <feature name="Whitelist">
        <param name="android-package" value="org.apache.cordova.whitelist.WhitelistPlugin" />
        <param name="onload" value="true" />
    </feature>
    <feature name="SafariViewController">
        <param name="android-package" value="com.customtabplugin.ChromeCustomTabPlugin" />
        <param name="onload" value="true" />
    </feature>
    <access origin="https://ssl.gstatic.com/accessibility/javascript/android/*" />
    <feature name="MobileAccessibility">
        <param name="android-package" value="com.phonegap.plugin.mobileaccessibility.MobileAccessibility" />
    </feature>
    <name>HelloCordova</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="dev@cordova.apache.org" href="http://cordova.io">
        Apache Cordova Team
    </author>
    <content src="index.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <allow-intent href="market:*" />
    <icon background="res/android/mdpi_background.png" density="mdpi" foreground="res/android/mdpi_foreground.png" />
    <icon background="res/android/hdpi_background.png" density="hdpi" foreground="res/android/hdpi_foreground.png" />
    <icon background="res/android/xhdpi_background.png" density="xhdpi" foreground="res/android/xhdpi_foreground.png" />
    <icon background="res/android/xxhdpi_background.png" density="xxhdpi" foreground="res/android/xxhdpi_foreground.png" />
    <icon background="res/android/xxxhdpi_background.png" density="xxxhdpi" foreground="res/android/xxxhdpi_foreground.png" />
    <preference name="loglevel" value="DEBUG" />
    <preference name="KeepRunning" value="true" />
    <preference name="StatusBarOverlaysWebView" value="true" />
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <preference name="KeyboardDisplayRequiresUserAction" value="false" />
</widget>
